@*菜单编辑分部页*@

<div class="modal-header">
    <h4 id="dialogTitle" class="modal-title"></h4>
    <a href="#" class="close" aria-hidden="true" data-dismiss="modal">x</a>
</div>
<div class="modal-body">
    <form id="frm_menu_edit" role="form" class="form-horizontal">
        <input type="hidden" id="frm_hd_key" name="ID" value="0" />
        <div class="form-group">
            <label class="radio-inline">
                <input type="radio" name="Enabled" id="rd_active" value="1"> 已启用
            </label>
            <label class="radio-inline">
                <input type="radio" name="Enabled" id="rd_unactive" value="0" checked> 未启用
            </label>
        </div>
        <div class="form-group">
            <input id="txt_menu_title" name="Title" class="form-control" placeholder="编辑菜单标题" />
        </div>
        <div class="form-group">
            <input id="txt_menu_url" name="Controller" class="form-control" placeholder="编辑菜单路径" />
        </div>
        <div class="form-group">
            <input id="txt_menu_remarks" name="Remarks" class="form-control" placeholder="编辑项备注" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" id="btn_modal_close" class="btn btn-default" data-dismiss="modal">
        <i class="fas fa-power-off"></i> 关闭
    </button>
    <button type="button" id="btn_modal_save" class="btn btn-primary">
        <i class="fas fa-save"></i> 保存
    </button>
</div>
