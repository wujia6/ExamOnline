@model List<MenuDto>

<div class="modal-header">
    <h4 id="dialog_title" class="modal-title"></h4>
    <a href="#" class="close" aria-hidden="true" data-dismiss="modal">x</a>
</div>
<div class="modal-body">
    <form id="frm_menu_edit" role="form" class="form-horizontal">
        <input type="hidden" id="frm_hd_key" name="ID" value="0" />
        <div class="form-group">
            @Html.DropDownList("ParentID", ViewData["ParentList"] as SelectList, "--所属父类--", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <select id="slt_menu_type" name="MenuType" class="form-control">
                <option value="-1">--菜单类型--</option>
                <option value="20">菜单</option>
                <option value="21">模块</option>
                <option value="22">控制器</option>
                <option value="23">功能</option>
            </select>
        </div>
        <div class="form-group">
            <input id="txt_menu_title" name="Title" class="form-control" placeholder="编辑项标题" />
        </div>
        <div class="form-group">
            <input id="txt_menu_controller" name="Controller" class="form-control" placeholder="编辑项模块名称" />
        </div>
        <div class="form-group">
            <input id="txt_menu_action" name="Action" class="form-control" placeholder="编辑项功能名称" />
        </div>
        <div class="form-group">
            <input id="txt_menu_remarks" name="Remarks" class="form-control" placeholder="编辑项备注" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" id="btn_menu_edit_close" class="btn btn-default" data-dismiss="modal">
        <i class="fas fa-close"></i>关闭
    </button>
    <button type="button" id="btn_menu_save" class="btn btn-primary" data-whatever="save">
        <i class="fas fa-save"></i>保存
    </button>
</div>
