@*权限编辑分部页*@

<div class="modal-header">
    <h4 id="dialogTitle" class="modal-title"></h4>
    <a href="#" class="close" aria-hidden="true" data-dismiss="modal">x</a>
</div>
<div class="modal-body">
    <form id="frm_permission_editor" role="form" class="form-row align-items-center">
        <input type="hidden" id="hdKey" name="ID" value="0" />
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="chk_enabled" name="Enabled">
            <label class="form-check-label" for="chk_enabled">激活权限</label>
        </div>
        <div class="form-group">
            @Html.DropDownList("TypeAt", ViewData["PermissionType"] as SelectList, "选择类型", new { @class = "form-control" });
        </div>
        <div class="form-group">
            <select id="sel_levelId" name="LevelID" class="form-control">
                <option value="0" checked="checked">指定父类</option>
            </select>
        </div>
        <div class="form-group"><input name="Named" class="form-control" placeholder="权限名" /></div>
        <div class="form-group"><input name="Command" class="form-control" placeholder="指令" /></div>
        <div class="form-group"><input name="Remarks" class="form-control" placeholder="备注" /></div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" id="btn_modal_close" class="btn btn-default" data-dismiss="modal"><i class="fas fa-power-off"></i> 关闭</button>
    <button type="button" id="btn_modal_save" class="btn btn-primary"><i class="fas fa-save"></i> 保存</button>
</div>
